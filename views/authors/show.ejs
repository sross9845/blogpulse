<h1><%= author.name %></h1>
<p>Mustache Size: <%= author.mustacheSize %></p>

<hr>

<h2>Posts by this author:</h2>
<% posts.forEach(function(post){ %>
    <p> <a href="/posts/<%=post.id%>"><%= post.title%></a></p>
<% }) %>
<hr>
<h2>Add a new post:</h2>
<form action="/authors/<%=author.id%>/posts" method="POST">
    <input type='text' name='title' placeholder="post title..."> <br />
    <input type="text" name="content" placeholder='type something...'> <br />
    <input type="submit" value="Add Post">
</form>
